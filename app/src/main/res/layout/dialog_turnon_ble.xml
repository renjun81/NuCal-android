<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:padding="@dimen/dialog_padding"
    android:background="@drawable/round_background"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base8pt"
        android:gravity="center"
        android:textSize="@dimen/dialog_title_text_size"
        android:text="Would You Like to Turn on Bluetooth?"
        android:textColor="#000000"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        android:textSize="@dimen/dialog_message_text_size"
        android:text="Bluetooth must be on to connect to a nearby device."
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/base_margin"
        >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="cancel"
            android:background="@drawable/popup_btn"
            android:textSize="@dimen/dialog_button_text_size"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/turn_on"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/popup_btn"
            android:text="Turn On"
            android:textSize="@dimen/dialog_button_text_size"
            android:textColor="#000000"/>

    </LinearLayout>

</LinearLayout>